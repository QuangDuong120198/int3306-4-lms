{
    "env": {
        "browser": true,
        "es6": true,
        "node": true,
        "mongo": true,
        "commonjs": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended",
        "plugin:prettier/recommended",
        "prettier/react",
        "prettier/standard"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly",
        "React": "writable"
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2019,
        "sourceType": "module"
    },
    "plugins": ["react", "prettier"],
    "settings": {
        "react": {
            "version": "16.9.0"
        }
    },
    "rules": {
        "indent": [
            "error",
            4,
            {
                "SwitchCase": 1
            }
        ],
        "quotes": ["error", "single"],
        "semi": ["error", "always"],
        "prettier/prettier": ["error", {}, { "usePretierrc": true }],
        "react/react-in-jsx-scope": "off"
    }
}
