{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "lib": [
      "DOM",
      "ES2015",
      "ES2016",
      "ES2017",
      "ES2018"
    ],
    "sourceRoot": "./",
    "outDir": "./target",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "jsx": "preserve",
    "checkJs": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "declaration": true,
    "jsxFactory": "React.createElement",
    "skipLibCheck": true,
    "noEmit": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ]
}
